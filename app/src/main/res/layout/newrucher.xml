<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CECECE"
    android:orientation="vertical">

    <EditText
        android:id="@+id/n_rucher"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:hint="Numéro de rucher"
        android:inputType="number"
        android:maxLength="3"
        android:nextFocusDown="@+id/num_adresse" />

    <EditText
        android:id="@+id/num_adresse"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:hint="Numéro de rue(facultatif)"
        android:inputType="number"
        android:maxLength="5"
        android:nextFocusDown="@+id/nom_adresse" />

    <EditText
        android:id="@+id/nom_adresse"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ, ,-"
        android:hint="Nom de rue"
        android:inputType="textFilter"
        android:maxLength="30"
        android:nextFocusDown="@+id/ville_adresse" />

    <EditText
        android:id="@+id/ville_adresse"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ, ,-"
        android:hint="Ville"
        android:inputType="textFilter"
        android:nextFocusDown="@+id/cp_adresse" />

    <EditText
        android:id="@+id/cp_adresse"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:hint="Code postal"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:maxLength="5" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/graphValider"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:background="@drawable/shape"
            android:gravity="center"
            android:text="@string/valider" />

        <Space
            android:layout_width="20dp"
            android:layout_height="fill_parent"
            android:gravity="center" />

        <Button
            android:id="@+id/graphAnnuler"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:background="@drawable/shape"
            android:gravity="center"
            android:text="@string/annuler" />

    </LinearLayout>

</LinearLayout>