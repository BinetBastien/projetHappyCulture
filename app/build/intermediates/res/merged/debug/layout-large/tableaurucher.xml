<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Liste des récoltes par année :"
        android:textSize="30sp" />

    <ListView
        android:id="@+id/listeRuche"
        android:layout_width="fill_parent"
        android:layout_height="400dp"
        android:fastScrollAlwaysVisible="true" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="83dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/quantite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="@dimen/activity_horizontal_margin" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/boutonValider2"
            android:layout_width="230dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:background="@drawable/shape"
            android:text="@string/nouveau" />

        <Space
            android:layout_width="20dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/boutonRetour2"
            android:layout_width="230dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:background="@drawable/shape"
            android:text="@string/retour" />
    </LinearLayout>

</LinearLayout><!-- From: file:/C:/Users/Bastien/Documents/Etudes/2A-IUTInfo/Projet/HappyCulture/app/src/main/res/layout-large/tableaurucher.xml -->